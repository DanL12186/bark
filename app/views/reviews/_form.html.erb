<div class="card card-body">
  <div class="card-title">
    Submit a Review
  </div>
  
  <%= form_with(model: [@restaurant, Review.new], local: true) do |form| %>
    <div class="form-group">
      <label for="exampleFormControlSelect1">5 Star Rating:</label>
      <%= form.select(:rating, [5, 4, 3, 2, 1], class: 'form-control') %>
    </div>

    <div class="form-group">
      <label for="comment">Comment</label>
      <%= form.text_area :comment, class: 'form-control', minlength: 8 %>
    </div>

    <div class="form-group">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>