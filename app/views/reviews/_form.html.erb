<div class="card card-body">
  <div class="card-title">
    Submit a Review
  </div>
  
  <%= form_with(model: [@restaurant, Review.new], local: true) do |form| %>
    <div class="form-group">
      <label for="exampleFormControlSelect1">5 Star Rating:</label>
      <%= form.select(:rating, [5, 4, 3, 2, 1], class: 'form-control') %>
    </div>

    <div class="form-group">
      <label for="comment">Review</label>
      <%= form.rich_text_area :comment, minlength: 8 %>
    </div>

    <div class='form-group'>
      <%= form.label "Review Photo" %>
      <%= form.file_field :photo, multiple: true %>
    </div>

    <div class="form-group">
      <%= form.submit class: 'btn btn-primary', 
                data: { 
                  reflex: "click->ReviewReflex#create_review",
                  restaurant_id: @restaurant.id,
                  current_user: current_user.id
                }
      %>
    </div>
  <% end %>
</div>